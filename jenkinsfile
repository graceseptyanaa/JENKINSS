pipeline {
    agent any

    environment {
        DOCKER_COMPOSE_CMD = "docker-compose -f docker-compose.yml"
    }

    stages {
        stage('Clone Repository') {
            steps {
                git branch: 'master', url: 'https://github.com/graceseptyanaa/JENKINSS.git'
            }
        }

        stage('Build Docker Containers') {
            steps {
                sh "${DOCKER_COMPOSE_CMD} build"
            }
        }

        stage('Run Containers') {
            steps {
                sh "${DOCKER_COMPOSE_CMD} up -d"
            }
        }

        stage('Composer Install') {
            steps {
                sh "${DOCKER_COMPOSE_CMD} exec app composer install"
            }
        }

        stage('Laravel Setup') {
            steps {
                sh "${DOCKER_COMPOSE_CMD} exec app cp .env.example .env"
                sh "${DOCKER_COMPOSE_CMD} exec app php artisan key:generate"
                sh "${DOCKER_COMPOSE_CMD} exec app php artisan migrate --force"
            }
        }
    }

    post {
        always {
            sh "${DOCKER_COMPOSE_CMD} logs --tail=100"
        }
    }
}
