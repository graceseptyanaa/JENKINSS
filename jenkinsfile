pipeline {
    agent any
    
    stages {
        stage('Clone Repo') {
            steps {
                git 'https://github.com/graceseptyanaa/JENKINSS.git'
            }
        }
        stage('Build Docker Image') {
            steps {
                // Menggunakan bat untuk Windows alih-alih sh
                bat 'docker build -t nama-image .'
            }
        }
        stage('Run Docker Container') {
            steps {
                // Menggunakan bat untuk Windows alih-alih sh
                bat 'docker run -d -p 8080:80 nama-image'
            }
        }
    }
}